<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:gravity="center_vertical"
        android:layout_weight="1.2"
        >
        <TextView
            android:id="@+id/tvPersonNameExpByMultiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sai Vineeth"
            android:textColor="?attr/customGrayColor"
            android:textSize="18sp"
            android:paddingBottom="3dp"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tvConvertedExpByMultiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="102 CAD"
            android:textColor="?attr/colorAccent"
            android:maxLines="1"
            android:ellipsize="end"
            android:visibility="visible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_weight="0.8">
        <EditText
            android:id="@+id/etExpByPersonExpByMultiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:inputType="numberDecimal"
            android:hint="0.00"/>
        <TextView
            android:id="@+id/tvCurrentCurrencyCodeExpByMultiple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR"
            android:layout_marginRight="10dp"
            android:textColor="?attr/customGrayColor"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>




</LinearLayout>