<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/hotelsCardView"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    tools:ignore="UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@id/imageView"
            android:scaleType="centerCrop"
            android:src="@drawable/image_placeholder"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:singleLine="true"
            android:id="@+id/nameTv"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="Make My Trip"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:layout_below="@+id/nameTv"
            android:id="@+id/urlTv"
            android:singleLine="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="15dp"
            android:text="www.makemytrip.com"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView"
            android:id="@+id/descTv"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_below="@+id/urlTv"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="4dp"
            android:text="Makemy trip is a website where you can book hotels, buses, trains and ensures a hassle free trip for you"
            />

    </RelativeLayout>


</android.support.v7.widget.CardView>